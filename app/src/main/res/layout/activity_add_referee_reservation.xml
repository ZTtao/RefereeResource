<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"/>
    <DatePicker
        android:id="@+id/dp_activity_add_referee_reservation"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:calendarViewShown="false"
        android:theme="@android:style/Theme.Holo.Light" />
    <TimePicker
        android:id="@+id/tp_activity_add_referee_reservation"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:theme="@android:style/Theme.Holo.Light" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address"/>
    <EditText
        android:id="@+id/et_activity_add_referee_reservation_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="game state"/>
    <EditText
        android:id="@+id/et_activity_add_referee_reservation_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="referee count"/>
    <EditText
        android:id="@+id/et_activity_add_referee_reservation_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="referee require"/>
    <EditText
        android:id="@+id/et_activity_add_referee_reservation_require"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reward"/>
    <EditText
        android:id="@+id/et_activity_add_referee_reservation_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_activity_add_referee_reservation_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"/>
</LinearLayout>