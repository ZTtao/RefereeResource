<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"/>
        <TextView
            android:id="@+id/tv_activity_info_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nick name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"/>
        <TextView
            android:id="@+id/tv_activity_info_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="real name"/>
        <EditText
            android:id="@+id/et_activity_info_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"/>
        <TextView
            android:id="@+id/tv_activity_info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"/>
        <RadioGroup
            android:id="@+id/rd_activity_info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_activity_info_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"/>
            <RadioButton
                android:id="@+id/rb_activity_info_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="女"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高"/>
        <TextView
            android:id="@+id/tv_activity_info_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>
        <EditText
            android:id="@+id/et_activity_info_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"/>
        <TextView
            android:id="@+id/tv_activity_info_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>
        <EditText
            android:id="@+id/et_activity_info_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"/>
        <TextView
            android:id="@+id/tv_activity_info_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1233333333"/>
        <EditText
            android:id="@+id/et_activity_info_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"/>
        <TextView
            android:id="@+id/tv_activity_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="223323223232"/>
        <EditText
            android:id="@+id/et_activity_info_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"/>
        <TextView
            android:id="@+id/tv_activity_info_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddfsfasfafasfasas"/>
        <EditText
            android:id="@+id/et_activity_info_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"/>
        <TextView
            android:id="@+id/tv_activity_info_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dafdafasfasfsdfffeeeeeeeeeeeeeee"/>
        <EditText
            android:id="@+id/et_activity_info_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_activity_info_register_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"/>
    </LinearLayout>
</ScrollView>